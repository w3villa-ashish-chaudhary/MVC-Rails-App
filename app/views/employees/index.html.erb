<div class="col-lg-12">
  <div class="card shadow-sm rounded-0 mt-5 mb-4 border-0" style="background-color: #616468ff;">
    <div class="card-body text-center ">
      <h2 class="text-white mb-0">Listing Employees</h2>
    </div>
  </div>
  
  <div class="text-center mb-5">
    <%= link_to "Create New Employee", new_employee_path, 
          class: "btn btn-lg text-white rounded-0 px-4 py-2 shadow-sm",
          style: "background-color: #0275c2ff;" %>
  </div>
</div>


<div class="table-responsive d-none d-lg-block">
  
  <table class="table table-bordered table-striped">
    <thead class="table-light">
      <tr>
        <th>Employee_ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>City</th>
        <th>State</th>
        <th>Pincode</th>
        <th>Country</th>
        <th>Address1</th>
        <th>Address2</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= employee.id %></td>
          <td><%= employee.first_name %></td>
          <td><%= employee.last_name %></td>
          <td><%= employee.city %></td>
          <td><%= employee.state %></td>
          <td><%= employee.pincode %></td>
          <td><%= employee.country %></td>
          <td><%= employee.address_line_1 %></td>
          <td><%= employee.address_line_2 %></td>
          <td>
            <%= link_to 'Edit', edit_employee_path(employee), class: "btn btn-primary " %>
            <%= link_to 'View', employee_path(employee), class: "btn btn-info" %>
           <%= button_to 'Delete', employee_path(employee), method: :delete, onclick: "return confirm('Are you sure you want to delete this employee?');", class: "btn btn-danger", form: { class: "d-inline" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<div class="d-lg-none">
  <% @employees.each do |employee| %>
    <div class="card mb-3">
      <div class="card-body">
        <p><strong>Employee ID:</strong> <%= employee.id %></p>
        <p><strong>Name:</strong> <%= employee.first_name %> <%= employee.last_name %></p>
        <p><strong>City:</strong> <%= employee.city %></p>
        <p><strong>State:</strong> <%= employee.state %></p>
        <p><strong>Pincode:</strong> <%= employee.pincode %></p>
        <p><strong>Country:</strong> <%= employee.country %></p>
        <p><strong>Address1:</strong> <%= employee.address_line_1 %></p>
        <p><strong>Address2:</strong> <%= employee.address_line_2 %></p>
        <div class="d-flex gap-2 mt-2">
         <%= button_to 'Edit', edit_employee_path(employee), class: "btn btn-primary " %>
         <%= button_to 'View', employee_path(employee), class: "btn btn-info " %>
         <%= button_to 'Delete', employee_path(employee), method: :delete, onclick: "return confirm('Are you sure you want to delete this employee?');", class: "btn btn-danger", form: { class: "d-inline" } %>
        </div>
      </div>
    </div>
  <% end %>
</div>


</div>